<div class="container">
  <div class="row">
    <div class="col">
      <h2><%= @post.title %></h2>
      <span><%= @post.score %> points, by <%= @post.author %></span>
      <img src="<%= @post.url %>">
    </div>
  </div>
  <div class="row">
    <div class="col comments-base">
      <h3>Comments</h3>
      <% @post.comments.each do |comment| %>
        <%= render partial: "comment_base", locals: {comment: comment} %>
      <% end %>
    </div>
  </div>
</div>
