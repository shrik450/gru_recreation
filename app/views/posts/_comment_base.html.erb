<li class="list-group-item">
  <div><%= comment.score %> points | <%= comment.author %></div>
  <div class="content">
    <p><%= comment.body %></p>
  </div>
  <% if comment.comments.present? %>
    <ul class="list-group">
      <% comment.comments.each do |child| %>
        <%= render partial: "comment_alt", locals: {comment: child} %>
      <% end %>
    </ul>
  <% end %>
</li>
